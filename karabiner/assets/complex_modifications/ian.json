{
    "title": "Ian Karabiner",
    "rules": [
        {
            "description": "Change fn + h/j/k/l to Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "up_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "down_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["fn"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_arrow"}]
                }
            ]
        },
        {
            "description": "Alt-PrtSc/Scroll/Pause become media control keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "aprint_screen",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "rewind"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "ascroll_lock",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "play_or_pause"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "apause",
                        "modifiers": {
                            "mandatory": ["left_option"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "fastforward"}]
                }
            ]
        }
    ]
}
